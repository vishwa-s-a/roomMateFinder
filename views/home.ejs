<%- include("header") -%>
<div class="card">
  <div class="card2">
    <form class="form" method="post" action="/" >
    <p id="heading">Room Mate Finder</p>
    <div class="field">
      <input type="text" class="input-field" name="name" autocomplete="new-password" placeholder="Name" pattern="^[a-zA-Z][a-zA-Z ]+[a-zA-Z]$" required>
    </div>
    <div class="field">
      <input type="text" class="input-field" name="phoneNumber" autocomplete="new-password" placeholder="Phone Number" pattern="^[6-9]\d{9}$" required >
    </div>
    <div class="field">
        <input type="text" class="input-field" name="cgpa" autocomplete="new-password" placeholder="Cgpa" pattern="^[0-9]\.[0-9]{2}$" required>
      </div>
      <div class="field">
          <input type="email" class="input-field" name="emailId" autocomplete="false" placeholder="Email ID">
      </div>
      <div class="field">
          <select name="programme" class="input-field" required>
            <option value="" disabled selected hidden>Programme</option>
            <option value="BTech">B.Tech</option>
            <option value="MTech">M.Tech</option>
          </select>
      </div>   
      <div class="field">
              <select name="year" class="input-field" required>
                <option value="" disabled selected hidden>Year</option>
                <option value="1">1st Year</option>
                <option value="2">2nd Year</option>
                <option value="3">3rd Year</option>
                <option value="4">4th Year</option>
                <option value="5">5th Year</option>
              </select>
      </div> 
      <div class="field">
          <select name="branch" class="input-field">
              <option value="" disabled selected hidden>Branch</option>
              <option value="CSE">CSE</option>
              <option value="IT">IT</option>
              <option value="ECE">ECE</option>
              <option value="EE">EE</option>
              <option value="Civil Eng.">Civil Eng.</option>
              <option value="Mechanical Eng.">Mechanical Eng.</option>
              <option value="Biomedical Eng.">Biomedical Eng.</option>
              <option value="Biotechnology">Biotechnology</option>
            </select>
      </div>
      <div class="field">
          <select name="block" class="input-field">
              <option value="" disabled selected hidden>Block</option>
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D">D</option>
              <option value="E">E</option>
              <option value="F">F</option>
              <option value="G">G</option>
            </select>
      </div>
    <div class="btn">
    <button class="button1" type="submit">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Submit&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
    <button class="button2" ><a href="/about">About us</a></button>
    </div>
</form>  
<%- include("footer") -%>